<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/LinearLayout01"
              android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
              android:background="@drawable/bg_android" android:orientation="vertical"
              android:gravity="center" android:layout_width="fill_parent"
              android:weightSum="1">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.03"
        android:src="@drawable/logo"/>

    <TextView android:id="@+id/TextView02" android:layout_height="wrap_content"
              android:textColor="#000000" android:layout_width="212dp"
              android:layout_margin="7dip" android:text="Enter your Site Collection Password"
              android:gravity="center"
              android:layout_weight="0.03"></TextView>

    <EditText
        android:layout_width="213dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_gravity="center_horizontal"
        android:inputType="textWebPassword"
        />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:text="New Button"
        android:id="@+id/button"
        android:layout_gravity="center_horizontal"
        android:visibility="invisible"
        android:layout_weight="0.05"/>

    <Button android:layout_width="112dp"
            android:layout_height="wrap_content" android:text="OK" android:id="@+id/OkButton"
            android:layout_gravity="center_horizontal"
        ></Button>
</LinearLayout><!-- From: file:/home/bwana/AndroidStudioProjects/PassMaster/app/src/main/res/layout/login_main.xml -->